{
  "compilerOptions": {
    /* Base Options: */
    "target": "ES2020",

    /* Strictness */
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "resolveJsonModule": true,

    "allowJs": true,
    "moduleDetection": "force",
    "isolatedModules": true,

    "noUncheckedIndexedAccess": true,
    "checkJs": true,

    /* Bundled projects */

    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
